<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.linchpin.IncentiveChoice"
    tools:showIn="@layout/activity_incentive_choice">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Specify the range for the Incetive Package"
        android:layout_gravity="center"
        android:textSize="21dp"
        android:layout_marginTop="20dp"
        android:textStyle="bold|italic"
        android:textAlignment="center"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="60dp"
        android:layout_height="wrap_content">
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:text="First Level Package(High)"
            />
        <EditText
            android:layout_width="50dp"
            android:inputType="numberDecimal"
            android:layout_marginLeft="60dp"
            android:textAlignment="center"
            android:hint="0"
            android:layout_height="50dp" />
        <EditText
            android:layout_width="50dp"
            android:inputType="numberDecimal"
            android:textAlignment="center"
            android:hint="0"
            android:layout_marginLeft="20dp"
            android:layout_height="50dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="40dp"
        android:layout_height="wrap_content">
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:text="Second Level Package(Medium)"
            />
        <EditText
            android:layout_width="50dp"
            android:inputType="numberDecimal"
            android:textAlignment="center"
            android:hint="0"
            android:layout_marginLeft="20dp"
            android:layout_height="50dp" />
        <EditText
            android:layout_width="50dp"
            android:inputType="numberDecimal"
            android:textAlignment="center"
            android:hint="0"
            android:layout_marginLeft="20dp"
            android:layout_height="50dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="40dp"
        android:layout_height="wrap_content">
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:text="Third Level Package(Low)"
            />
        <EditText
            android:layout_width="50dp"
            android:inputType="numberDecimal"
            android:textAlignment="center"
            android:hint="0"
            android:layout_marginLeft="60dp"
            android:layout_height="50dp" />
        <EditText
            android:layout_width="50dp"
            android:inputType="numberDecimal"
            android:textAlignment="center"
            android:hint="0"
            android:layout_marginLeft="20dp"
            android:layout_height="50dp" />
    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Finalize"
        android:layout_gravity="center"
        android:background="#119822"
        android:textColor="@android:color/background_light"
        android:onClick="finalize"
        android:layout_marginTop="30dp"
        />

</LinearLayout>
